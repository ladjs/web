{
  "name": "@ladjs/web",
  "description": "Web server for Lad",
  "version": "2.0.5",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "bugs": {
    "url": "https://github.com/ladjs/web/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@koa/router": "8.x",
    "@ladjs/i18n": "^3.0.12",
    "@ladjs/koa-better-static": "^2.0.0",
    "@ladjs/koa-cache-responses": "^0.0.1",
    "@ladjs/redis": "^1.0.3",
    "@ladjs/shared-config": "^2.0.13",
    "@ladjs/state-helper": "^0.0.2",
    "@ladjs/store-ip-address": "^0.0.7",
    "boolean": "3.0.1",
    "cabin": "^6.1.1",
    "crypto-random-string": "^3.2.0",
    "express-request-id": "^1.4.1",
    "kcors": "^2.2.2",
    "koa": "^2.11.0",
    "koa-404-handler": "^0.0.2",
    "koa-basic-auth": "^4.0.0",
    "koa-better-error-handler": "^4.0.2",
    "koa-better-flash": "^0.0.4",
    "koa-better-timeout": "^0.0.4",
    "koa-bodyparser": "^4.3.0",
    "koa-cash": "^3.0.4",
    "koa-compress": "^4.0.1",
    "koa-conditional-get": "^2.0.0",
